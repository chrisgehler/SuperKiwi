<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@android:color/holo_green_dark"
        android:text="@string/compatibility_message_supported"
        android:id="@+id/compatibility_message"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_green_dark"
        android:text="@string/compatibility_message_supported"
        android:id="@+id/compatibility_submessage"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp"
        />


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="nz.pbomb.xposed.anzmods.MainActivity_PreferencesFragment"
        android:id="@+id/prefFragment"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp" />

</LinearLayout>